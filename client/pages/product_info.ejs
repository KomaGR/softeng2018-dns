
<html>
    <head>
      <% include navbar.ejs %>
    </head>
  
  
    <body>
      <% include search_bar.ejs %>
  
  
      <div class="card p-md-2 p-0 mx-3 my-0 ">
  
        <!-- <h2 class=" display-4">this is information about a product</h2> -->
        <div class='p-3'>

          <p class="lead"><b> Name:</b> <%= product.name %> </p>
  
          <!-- <p > ID: <%= product.id %> </p> -->
          <p class="lead "> <b> Description:</b> <%= product.description %> </p>

          <p class="lead"><b> Category:</b> <%= product.category %> </p>
  
          <p class="lead"> <b>Tags:</b> <% for(var tag in product.tags){ %>
              <%= product.tags[tag] %>
              <% } %>
          </p>
  
          <p class="lead"> <b>Withdrawn:</b> <%= product.withdrawn %> </p>
  
          <p class="lead"><b> ExtraData:</b> <% for (var key in product.extraData) { %>
              <%= key + ' ' + product.extraData[key] %>
          <% } %>
          </p>
        </div>
    </div>
    <% if ( session.auth_token ) { %>
      <a class="btn btn-primary text-white mx-5 mb-3 mt-4 align-self-md-auto align-self-center"  data-toggle="modal" data-target="#edit_modal" >Edit</a>
      <% include edit_product.ejs %>
    <% } %>
  <div class="row mr-5">
  <div class="col-md-6 col-12 p-2 m-3 ml-5 mr-5">
  <p class="lead"> Select dates </p>
  <form id="newShop" action='/product_info_final' method="POST">
  <div class="form-group">
    <label for="DateFrom" class="lead">Date from</label>
    <input type="date"  class="form-control" placeholder="Enter date from" name="datefrom" required>
  </div>
  <div class="form-group">
    <label for="DateTo" class="lead">Date to</label>
    <input type="date"  class="form-control" placeholder="Enter date to" name="dateto" required>
  </div>
  <input id="prodId" type="text" name="prodId" value="<%=product.id%>" hidden>
  <button type="submit" class="btn btn-primary ">Ψάξε</button>
  </form>
</div>
</div>
  <% include footer.ejs %>
  
  
  
  
    </body>
  </html>